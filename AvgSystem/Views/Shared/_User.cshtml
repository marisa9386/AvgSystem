@{
    Layout = "~/Views/Shared/_Index.cshtml";
}

<!--内容填充-->
<div style="background-color: #eee">
    <section class="container">
        <div class="height30"></div>
        <div class="row">
            <!--左侧导航-->
            <div class="col-md-3">
                <div class="userLeft">
                    <!--用户头像-->
                    <div class="height30"></div>
                    <div class="leftNavContent">
                        <!--当前页面请加navActive-->
                        <div class="userNav " data-page="GameCollect">
                            <a href="@Url.Action("Index", "GameCollect")">
                                <span class="navLogo fa fa-tasks"></span>
                                <span class="navTitle">我的书架</span>
                                <span class="arrowRight  fa fa-caret-right "></span>
                                <hr>
                            </a>
                        </div>

                        <div class="userNav " data-page="UserGame">
                            <a href="@Url.Action("Index", "UserGame")">
                                <span class="navLogo fa fa-book"></span>
                                <span class="navTitle">讲述冒险</span>
                                <span class="arrowRight  fa fa-caret-right "></span>
                                <hr>
                            </a>
                        </div>
                    </div>

                </div>
            </div>

            @RenderBody()
        </div>
        <div class="height30"></div>
    </section>
    <div class="height30"></div>
</div>
<!--内容填充-->
<script>
    $(function () {
        $('.leftNavContent .userNav[data-page="' + $('#pageLabel').attr('data-page') + '"]').addClass('navActive');
    });
</script>